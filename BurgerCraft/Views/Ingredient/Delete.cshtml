@model BurgerCraft.Models.Ingredient

<h1 class="mb-4">Delete Ingredient</h1>

<div class="alert alert-warning mb-4">
    <h3 class="alert-heading">Are you sure you want to delete this ingredient?</h3>
    <hr>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id) <!-- Hidden field for the Id -->

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
