@model BurgerType

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Burger Types</title>
</head>

<body>
@using (Html.BeginForm("Create", "BurgerType", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.Name, "Burger Type Name", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter burger type name", required = "required" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-success w-100">Add Burger Type</button>
        </div>
    </div>
}
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>